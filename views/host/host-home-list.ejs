<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-12 max-w-7xl">
      <div class="text-center mb-12">
        <div class="inline-block bg-gradient-to-r from-indigo-600 to-pink-600 p-3 rounded-full mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
        </div>
        <h1 class="text-5xl font-bold text-gray-900 mb-4 bg-gradient-to-r from-indigo-600 to-pink-600 bg-clip-text text-transparent">
          My Homes
        </h1>
        <p class="text-xl text-gray-600">Manage your home listings</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 group">
            <div class="relative overflow-hidden">
              <img src="<%=home.photoUrl%>" alt="<%= home.houseName %>" class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500">
              <div class="absolute top-4 right-4 bg-white rounded-full p-2 shadow-lg">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-800 font-semibold ml-1"><%= home.rating %></span>
                </div>
              </div>
              <div class="absolute top-4 left-4 bg-indigo-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                Your Home
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-1"><%= home.houseName %></h3>
              <p class="text-gray-500 mb-4 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <%= home.location %>
              </p>
              <div class="flex justify-between items-center mb-6">
                <div>
                  <span class="text-3xl font-bold text-indigo-600">â‚¹<%= home.price %></span>
                  <span class="text-gray-500 text-sm">/night</span>
                </div>
              </div>
              <div class="flex gap-3">
                <a href="/host/edit-home/<%=home._id%>" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 text-center">
                  Edit
                </a>
                <a href="/host/delete-home/<%=home._id%>" class="flex-1 bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 text-center">
                  Delete
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
